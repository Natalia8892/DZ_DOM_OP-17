        function $() {
            if (element.startsWith("#")) { //поиск для ID
                if (charAt(0))
                    var subEl = element.substring(1)
                var element1 = document.getElementById(subEl).innerText;
                console.log(element1)
            } else if (element.startsWith(".")) { // поиск для класса
                var subEl2 = element.substring(1)
                var element2 = document.getElementsByClassName(subEl2);
                if (element2.length > 1) { // условие для повторяющихся классов
                    console.log(element2)
                } else { // условие для одного класса
                    var elemInd;
                    for (var i = 0; i < element2.length; i++) {
                        var elemInd = element2[i].innerText;
                        console.log(elemInd)
                    }
                }
            } else { // тег
                var elements = document.getElementsByTagName(element);
                for (var x = 0; x < elements.length; x++) {
                    var tag = elements[x].innerText;
                    console.log(tag)
                }

            }
        }

        var element = prompt("Vvedite dannie", )
        $(element)
