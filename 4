    <script>
        function getInnerTextOfElement() {
            if (element.startsWith("#")) {
                var subEl = element.substring(1);
                var element1 = document.getElementById(subEl).innerText;
                return element1
            } else if (element.startsWith(".")) {
                var subEl2 = element.substring(1);
                var element2 = document.getElementsByClassName(subEl2);
                var elemInd;
                for (var i = 0; i < element2.length; i++) {
                    var elemInd = element2[i].innerText;
                    return elemInd
                }
            }
        }

        var element = prompt("Vvedite dannie", )
        getInnerTextOfElement(element)
    </script>

</body>

